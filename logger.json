{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "basic": {
      "format": "%(asctime)s:%(module)s:%(levelname)s:%(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "detailed": {
      "format": "%(asctime)s [%(levelname)s] %(name)s:%(lineno)d - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "basic"
    },
    "file_debug": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "/app/logs/debug.log",
      "maxBytes": 10485760,
      "backupCount": 3
    },
    "file_info": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "detailed",
      "filename": "/app/logs/info.log",
      "maxBytes": 10485760,
      "backupCount": 3
    },
    "file_warning": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "WARNING",
      "formatter": "detailed",
      "filename": "/app/logs/warning.log",
      "maxBytes": 10485760,
      "backupCount": 3
    },
    "file_error": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "ERROR",
      "formatter": "detailed",
      "filename": "/app/logs/error.log",
      "maxBytes": 10485760,
      "backupCount": 3
    },
    "file_critical": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "CRITICAL",
      "formatter": "detailed",
      "filename": "/app/logs/critical.log",
      "maxBytes": 10485760,
      "backupCount": 3
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
      "console",
      "file_debug",
      "file_info",
      "file_warning",
      "file_error",
      "file_critical"
    ]
  },
  "loggers": {
    "__main__": {
      "level": "DEBUG",
      "handlers": [],
      "propagate": true
    }
  }
}
